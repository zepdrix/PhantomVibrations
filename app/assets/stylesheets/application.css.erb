h2 {
  margin-top: 20px;
  font-size: 26px;
}


.play-icon:active {
  transition: 0.5s;
  transform: translateY(3px);
}

.track-item .play-icon {
  display: block;
  float: left;
  margin-top: 15px;
  margin-left: 20px;
  margin-right: 0px;
  color: black;
  border-top: 10px solid transparent;
  border-left: 20px solid #FC6F0A;
  border-bottom: 10px solid transparent;
  /*background-image: url(<%= asset_path 'play.svg' %>)*/
}

.pause-icon {
  display: block;
  float: left;
  margin-top: 15px;
  margin-left: 20px;
  margin-right: 0px;
  color: black;
  border-top: 10px solid transparent;
  border-left: 20px solid blue;
  border-bottom: 10px solid transparent;
  /*background-image: url(<%= asset_path 'play.svg' %>)*/
}

.user-page .user-avatar-image {
  height: 200px;
  width: 200px;
  margin-top: 25px;
  margin-left: 20px;
  display: block;
  float: left;
  border-radius: 50%;
  border: 1px solid grey;
}

.user-area {
  float: left;
}

.user-avatar-image, .track-image {
  box-shadow: 0px 0px 30px grey;
}

.user-page{
  width: 900px;
  margin: 0 auto;
}
.user-page.section {
  padding-top: 35px;

}
.user-page.banner-area {
  margin-top: 75px;
  height: 250px;
  box-shadow: 0px 0px 30px black;
}

.with-song {
  position: fixed;
  width: 100%;
  height: 60px;
  margin: 0 auto;
  background-color: #525252;
  bottom: 0%;
  box-shadow: 0px 0px 30px black;
  color: lightgrey;
}

.avatar-preview {
  margin: 10px;
  margin: 20px auto;
  width: 160px;
  height: 160px;
  border: 1px solid grey;
}
