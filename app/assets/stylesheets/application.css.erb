h2 {
  margin-top: 20px;
  font-size: 26px;
}

h3 {
  font-size: 20px;
  margin-top:20px;
  font-weight: normal;
  text-align: center;
}

.user-page .user-avatar-image {
  height: 200px;
  object-fit: cover;
  width: 200px;
  margin-top: 25px;
  margin-left: 20px;
  display: block;
  float: left;
  border-radius: 50%;
  border: 1px solid grey;
}

.user-area {
  float: left;
}

.user-avatar-image, .track-image {
  box-shadow: 0px 0px 30px grey;
}

.user-page{
  width: 900px;
  margin: 0 auto;
  display: block;
}

.user-page.section {
  padding-top: 35px;
  display: block;
}

.user-page.banner-area {
  margin-top: 75px;
  height: 250px;
  box-shadow: 0px 0px 30px black;
}

.avatar-preview {
  margin: 10px;
  margin: 20px auto;
  width: 160px;
  height: 160px;
  border: 1px solid grey;
}
